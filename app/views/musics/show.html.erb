
<div class="bg-white container text-center mt-5">
<div class="row align-items-center">
<div class="col-sm-6  image">
 
<div class="mx-auto">
<%if @music.cover.attached?%>
<%= image_tag url_for(@music.cover) , style: "height:20rem; width:50%;" %>
<%end%>
</div>

</div>
<div class="col-sm-6">
        <% @music.audios.each do |audio| %>

            <div class="border border-dark p-3 w-50 mx-auto mt-3  bg-dark">
<div class="mt-3">
            <%= audio_tag(audio.url, autoplay: false, controls: true) %>

            </div>
            
            <div class="mt-2">

        
         

            <%= link_to "Delete", purge_audio_music_path(@music, audio_id: audio.id), data: {
                turbo_method: :delete,
                turbo_confirm: "Are you sure?"
              } %>
           </div>
            </div>


          <% end %><br><br>
          </div>
  </div>
          

          <i><b><%= link_to "edit", edit_music_path(@music),style:"text-decoration:none;color:black;background:silver   ;padding:7px;border-radius:3rem"%></b></i> <br><br>
         
          
          
   <i><b> <%= link_to "Destroy", music_path(@music), style:"text-decoration:none;color:black;background:silver;padding:7px;border-radius:3rem" ,data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} %></b></i>

    </div>
  